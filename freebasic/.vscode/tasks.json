{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile FreeBASIC",
      "type": "shell",
      "command": "fbc",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Compile current FreeBASIC file"
    },
    {
      "label": "Run FreeBASIC Program",
      "type": "shell",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Run FreeBASIC",
      "dependsOn": [
        "Compile FreeBASIC",
        "Run FreeBASIC Program"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
